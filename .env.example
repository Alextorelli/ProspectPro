# ProspectPro - Real API Testing Configuration
# Branch: iterative-testing-v1
# Copy this file to .env and replace with your real API keys

# ================================
# REQUIRED: Real API Keys for Testing
# ================================

# Google Places API (Required for business discovery)
# Get from: https://console.cloud.google.com/apis/credentials
# Enable: Places API, Places Details API, Geocoding API
# Cost: ~$0.032 per search, $0.017 per details request
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Foursquare Places API (Required for location verification)
# Get from: https://developer.foursquare.com/
# Service Key auth preferred (Authorization: Bearer ...)
FOURSQUARE_SERVICE_API_KEY=your_foursquare_service_key_here
FOURSQUARE_API_KEY=your_foursquare_api_key_here
FOURSQUARE_PLACES_API_VERSION=2025-06-17

# Hunter.io Email Discovery (Required for email finding)
# Get from: https://hunter.io/api_keys
# Free tier: 25 searches/month, then $0.04 per search
HUNTER_IO_API_KEY=your_hunter_io_api_key_here

# NeverBounce Email Validation (Required for email verification)
# Get from: https://app.neverbounce.com/settings/api
# Free tier: 1000 verifications/month, then $0.008 per verification
NEVERBOUNCE_API_KEY=your_neverbounce_api_key_here

# ================================
# SUPABASE DATABASE (Required)
# ================================

# Supabase Project Configuration
# Get from: Project Settings → API → Project URL
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SECRET_KEY=your_supabase_service_role_key_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ================================
# TESTING CONFIGURATION
# ================================

# Environment Settings
NODE_ENV=testing
PORT=3000
ALLOW_DEGRADED_START=true

# Budget Controls (USD)
DAILY_BUDGET_LIMIT=25.00
DEFAULT_BUDGET_LIMIT=10.00
PER_LEAD_COST_LIMIT=2.00

# Quality Thresholds
MIN_CONFIDENCE_SCORE=80
PRE_VALIDATION_THRESHOLD=70

# Rate Limiting
REQUEST_TIMEOUT=15000
REQUEST_DELAY=1000
MAX_CONCURRENT_REQUESTS=5

# ================================
# OPTIONAL: Additional APIs
# ================================

# Website Content Scraping
# SCRAPINGDOG_API_KEY=your_scrapingdog_api_key_here

# Alternative Email Validation
# ZEROBOUNCE_API_KEY=your_zerobounce_api_key_here

# State Registry APIs (Free)
# SOCRATA_API_KEY=your_socrata_api_key_here
# USPTO_TSDR_API_KEY=your_uspto_api_key_here

# ================================
# SECURITY & ACCESS
# ================================

# Admin Dashboard Access
PERSONAL_ACCESS_TOKEN=your_secure_admin_token_here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# ================================
# DEVELOPMENT SETTINGS
# ================================

# Logging
LOG_LEVEL=info
DEBUG_MODE=false

# Development Features
ENABLE_DEV_ADMIN=true
TRACK_API_COSTS=true

# Testing Overrides
MOCK_API_RESPONSES=false
SKIP_AUTH_IN_DEV=false

# ================================
# USAGE INSTRUCTIONS
# ================================

# 1. Copy this file: cp .env.example .env
# 2. Get API keys from the URLs listed above
# 3. Replace all "your_*_here" values with real keys
# 4. Test setup: npm run dev
# 5. Verify: node test/verify-no-fake-data.js
# 6. Test real data: POST to /api/business-discovery

# Expected API costs for testing:
# - Small test (5 businesses): ~$0.50
# - Medium test (25 businesses): ~$2.50
# - Full campaign (100 businesses): ~$10.00