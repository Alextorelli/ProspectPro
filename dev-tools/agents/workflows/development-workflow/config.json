{
  "name": "development-workflow",
  "version": "2.1.0",
  "role": "feature_developer",
  "capabilities": [
    "frontend_development",
    "edge_function_development",
    "testing_automation",
    "code_review",
    "ci_cd_orchestration",
    "debugging"
  ],
  "mcp_dependencies": {
    "primary": ["chrome-devtools", "github", "supabase", "integration-hub"],
    "secondary": ["playwright", "supabase-troubleshooting", "drizzle-orm"]
  },
  "tools_access": [
    "chrome_devtools.screenshot_capture",
    "chrome_devtools.performance_profile",
    "chrome_devtools.trace_analysis",
    "github.create_pull_request",
    "github.request_copilot_review",
    "github.add_labels",
    "github.merge_pull_request",
    "supabase.execute_query",
    "supabase.validate_migration",
    "integration_hub.execute_workflow",
    "integration_hub.send_notification",
    "supabase_troubleshooting.correlate_errors",
    "drizzle_orm.migrate",
    "drizzle_orm.query",
    "playwright.run_suite"
  ],
  "testing_tooling": ["React DevTools", "Playwright"],
  "knowledge_base": {
    "app_system_reference": "/docs/app/SYSTEM_REFERENCE.md",
    "dev_tools_fast_readme": "/docs/mmd-shared/FAST_README.md",
    "documentation_standards": "/docs/technical/DOCUMENTATION_STANDARDS.md",
    "context_store": "/dev-tools/agents/context/README.md",
    "filetrees": {
      "app": "/dev-tools/context/session_store/app-filetree.txt",
      "dev_tools": "/dev-tools/context/session_store/dev-tools-filetree.txt",
      "integration": "/dev-tools/context/session_store/integration-filetree.txt"
    }
  },
  "testing_config": {
    "unit_coverage_target": 80,
    "integration_coverage_target": 100,
    "e2e_critical_paths": ["discovery", "enrichment", "export", "auth"],
    "test_frameworks": [
      "vitest",
      "playwright",
      "deno",
      "pgTAP",
      "mcp-validation"
    ]
  },
  "code_quality": {
    "eslint_max_warnings": 10,
    "typescript_strict_mode": true,
    "pre_commit_hooks": ["lint:fix", "zero-fake-data-check"],
    "pre_push_hooks": ["test", "supabase:test:db", "supabase:test:functions"]
  },
  "environment_credentials": {
    "development": {
      "supabase_project_ref_var": "AGENT_DEV_SUPABASE_PROJECT_REF",
      "supabase_url_var": "AGENT_DEV_SUPABASE_URL",
      "vercel_project_var": "AGENT_DEV_VERCEL_PROJECT"
    },
    "production": {
      "supabase_project_ref_var": "AGENT_PROD_SUPABASE_PROJECT_REF",
      "supabase_url_var": "AGENT_PROD_SUPABASE_URL",
      "vercel_project_var": "AGENT_PROD_VERCEL_PROJECT"
    },
    "troubleshooting": {
      "supabase_project_ref_var": "AGENT_TROUBLESHOOT_SUPABASE_PROJECT_REF",
      "supabase_url_var": "AGENT_TROUBLESHOOT_SUPABASE_URL",
      "vercel_project_var": "AGENT_TROUBLESHOOT_VERCEL_PROJECT"
    }
  },
  "secrets_management": {
    "env_file": "dev-tools/agents/.env",
    "template": "dev-tools/agents/.env.agent.example",
    "required_variables": [
      "AGENT_SUPABASE_ACCESS_TOKEN",
      "AGENT_SUPABASE_DEFAULT_JWT",
      "AGENT_DEV_SUPABASE_PROJECT_REF",
      "AGENT_PROD_SUPABASE_PROJECT_REF",
      "AGENT_TROUBLESHOOT_SUPABASE_PROJECT_REF",
      "AGENT_DEV_VERCEL_PROJECT",
      "AGENT_PROD_VERCEL_PROJECT",
      "AGENT_TROUBLESHOOT_VERCEL_PROJECT"
    ]
  },
  "automation_tasks": {
    "daily_start": "Start Codespace",
    "test_suite": "Test: Full Stack Validation",
    "deploy_prod": "Deploy: Full Automated Frontend",
    "edge_deploy": "Edge Functions: Production Deploy Workflow",
    "context_snapshot": "dev-tools/agents/scripts/context-snapshot.sh",
    "vercel_validate": "scripts/automation/vercel-validate.sh",
    "redis_observability": "scripts/automation/redis-observability.sh"
  },
  "performance_targets": {
    "pr_merge_time_hours": 24,
    "build_success_rate_percent": 95,
    "mcp_adoption_percent": 70,
    "test_execution_time_seconds": 300
  },
  "escalation_criteria": [
    "database_schema_change",
    "new_api_integration",
    "performance_regression_gt_50_percent",
    "security_vulnerability",
    "ci_cd_broken_gt_2_hours"
  ],
  "communication_channels": {
    "pr_template": ".github/pull_request_template.md",
    "collaboration": ["system-architect", "observability", "production-ops"],
    "notification": "integration_hub.send_notification"
  },
  "debugging_playbook": {
    "frontend_runtime_errors": [
      "chrome_devtools",
      "vercel_logs",
      "env_validation",
      "scripts/automation/vercel-validate.sh"
    ],
    "edge_function_401": [
      "correlate_errors",
      "rls_check",
      "auth_test",
      "dev-tools/agents/scripts/context-snapshot.sh"
    ],
    "performance_degradation": [
      "analyze_slow_queries",
      "pool_health",
      "edge_logs",
      "scripts/automation/redis-observability.sh"
    ],
    "integration_failures": [
      "integration_health",
      "circuit_breaker_state",
      "api_keys",
      "dev-tools/agents/scripts/context-snapshot.sh"
    ]
  },
  "routing_helper": "scripts/automation/lib/participant-routing.sh",
  "dry_run_guidance": "All automation scripts support --dry-run for safe diagnostics. Load agent credentials from dev-tools/agents/.env (see .env.agent.example) before invoking MCP tools."
}
