{
  "version": "3.0",
  "last_updated": "2025-10-27",
  "servers": {
    "supabase": {
      "type": "http",
      "package": "@supabase/mcp",
      "url": "https://mcp.supabase.com/mcp?project_ref=sriycekxdqnesdsgwiuc&features=docs,account,database,debugging,development,functions,storage,branching",
      "capabilities": [
        "database",
        "functions",
        "storage",
        "account",
        "docs",
        "debugging",
        "branching"
      ],
      "health_check_url": "https://status.supabase.com/",
      "startup_timeout_ms": 5000,
      "response_time_p95_target_ms": 600
    },
    "github/github-mcp-server": {
      "type": "http",
      "package": "@github/github-mcp-server",
      "url": "https://api.githubcopilot.com/mcp/",
      "capabilities": [
        "code_search",
        "pull_requests",
        "issues",
        "actions_status"
      ],
      "health_check_url": "https://www.githubstatus.com/",
      "startup_timeout_ms": 5000,
      "response_time_p95_target_ms": 650
    },
    "microsoft/playwright-mcp": {
      "type": "stdio",
      "package": "@playwright/mcp",
      "invocation": "npx",
      "arguments": ["@playwright/mcp@latest"],
      "env": {
        "PLAYWRIGHT_HEADED": "${env:PLAYWRIGHT_HEADED:false}"
      },
      "capabilities": [
        "browser_automation",
        "e2e_testing",
        "accessibility_audits"
      ],
      "health_check_url": null,
      "startup_timeout_ms": 8000,
      "response_time_p95_target_ms": 800
    },
    "context7": {
      "type": "http",
      "package": "context7",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "${env:CONTEXT7_API_KEY}"
      },
      "capabilities": [
        "documentation_lookup",
        "api_reference",
        "code_examples"
      ],
      "health_check_url": "https://status.context7.com/",
      "startup_timeout_ms": 3000,
      "response_time_p95_target_ms": 500
    },
    "utility": {
      "type": "stdio",
      "package": "local",
      "invocation": "node",
      "script_path": "./utility/dist/index.js",
      "env": {
        "NODE_ENV": "utility",
        "ALLOWED_PATH": "${env:ALLOWED_PATH:-/workspaces/ProspectPro}",
        "MCP_MEMORY_FILE_PATH": "${env:MCP_MEMORY_FILE_PATH:-dev-tools/workspace/context/session_store/memory.jsonl}",
        "SEQUENTIAL_LOG_PATH": "${env:SEQUENTIAL_LOG_PATH:-dev-tools/workspace/context/session_store/sequential-thoughts.jsonl}"
      },
      "capabilities": [
        "http_fetch",
  "html_conversion"
        "filesystem_read",
        "filesystem_write",
        "git_status",
  "timezone_conversion"
        "long_term_memory",
        "session_recall",
        "conversation_indexing",
        "scenario_analysis",
        "chain_of_thought",
        "decision_logging"
      ],
      "health_check_url": null,
      "startup_timeout_ms": 3000,
      "response_time_p95_target_ms": 300
    }
  },
  "monitoring": {
    "performance_targets": {
      "mcp_call_latency_p95_ms": 500,
      "connection_pool_utilization_max_percent": 80,
      "error_rate_max_percent": 1
    },
    "alerting": {
      "mcp_server_downtime": "immediate_slack_alert",
      "performance_degradation": "alert_if_p95_gt_1s_for_5min",
      "authentication_failures": "alert_on_repeated_failures"
    }
  }
}
