{
  "name": "ProspectPro - Verified Business Intelligence",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:22",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "moby": false,
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "denoland.vscode-deno",
        "supabase.supabase-vscode",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "github.copilot",
        "github.copilot-chat",
        "vscode-icons-team.vscode-icons",
        "bradlc.vscode-tailwindcss",
        "antfu.vite",
        "redhat.vscode-yaml",
        "ms-playwright.playwright",
        "vitest.explorer",
        "GraphQL.vscode-graphql",
        "task.vscode-task",
        "HuggingFace.huggingface-vscode-chat",
        "chrisdias.promptboost"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "deno.enable": true,
        "deno.enablePaths": ["./app/backend/functions"],
        "deno.lint": true,
        "deno.unstable": ["bare-node-builtins", "byonm", "sloppy-imports"],
        "deno.path": "/usr/local/bin/deno",
        "git.autofetch": true,
        "git.confirmSync": false,
        "git.enableSmartCommit": true,
        "editor.minimap.enabled": false,
        "editor.renderWhitespace": "none",
        "editor.renderControlCharacters": false,
        "workbench.colorTheme": "Vira Deepforest",
        "workbench.iconTheme": "vscode-icons",
        "workbench.list.smoothScrolling": false,
        "workbench.tree.renderIndentGuides": "none",
        "workbench.editor.closeOnFileDelete": true,
        "workbench.colorCustomizations": {
          "[Vira Deepforest]": {
            "titleBar.activeBackground": "#1a4d3a",
            "titleBar.activeForeground": "#ffffff",
            "statusBar.background": "#1a4d3a",
            "statusBar.foreground": "#ffffff",
            "activityBar.background": "#0d2818",
            "panel.background": "#0a1f14"
          }
        },
        "workbench.settings.editor": "json",
        "breadcrumbs.enabled": true,
        "files.watcherExclude": {
          "**/*.log": true,
          "**/*.tmp": true,
          "**/node_modules/**": true,
          "**/archive/**": true,
          "**/.git/**": true,
          "**/logs/**": true
        },
        "search.exclude": {
          "**/node_modules": true,
          "**/*.log": true,
          "**/archive/**": true,
          "**/.git": true
        },
        "search.searchOnType": false,
        "github.copilot.chat.historyCount": 8,
        "github.copilot.chat.welcomeMessage": "none",
        "github.copilot.chat.completionPhrasesEnabled": false,
        "github.copilot.advanced.setAutoCompletionTriggerThreshold": 30,
        "terminal.integrated.gpuAcceleration": "on",
        "terminal.integrated.scrollback": 1000,
        "terminal.integrated.fontFamily": "Consolas, 'Courier New', monospace",
        "terminal.integrated.fontSize": 13,
        "window.title": "ðŸŽ¯ ${folderName} - Verified Business Intelligence ${separator} ${activeEditorShort}",
        "workbench.startupEditor": "welcomePageInEmptyWorkbench",
        "mcp.enable": true,
        "mcp.configFile": "${workspaceFolder}/.vscode/mcp-config.json",
        "rest-client.enableTelemetry": false,
        "files.associations": {
          "*.http": "http",
          "*.rest": "http"
        },
        "ai.contextAware": true,
        "ai.projectContext": {
          "type": "verified-business-intelligence-platform",
          "framework": "supabase-edge-functions",
          "database": "supabase-postgresql",
          "apis": [
            "google-places",
            "apollo-contacts",
            "chamber-commerce",
            "professional-licensing"
          ],
          "deployment": "supabase-edge-functions",
          "dataPolicy": "zero-fake-data-verified-contacts-only"
        }
      }
    }
  },
  "forwardPorts": [3000, 5432],
  "postCreateCommand": "npm install && command -v deno >/dev/null || (curl -fsSL https://deno.land/install.sh | DENO_INSTALL=/usr/local sh && chmod +x /usr/local/bin/deno)",
  "postStartCommand": "bash -c 'echo \"[start] ProspectPro verified business intelligence environment active.\"; echo \"Data Policy: Zero Fake Data | Contacts: Verified Only | Architecture: Supabase Edge Functions\"; echo \"[hint] Use Copilot Chat for AI-assisted development with verified data context.\"'",
  "remoteUser": "node"
}
