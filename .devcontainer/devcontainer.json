{
  "name": "ProspectPro - Verified Business Intelligence",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        // Core Development
        "denoland.vscode-deno",
        "supabase.supabase-vscode",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",

        // Productivity
        "eamodio.gitlens",
        "github.copilot",
        "github.copilot-chat",
        "streetsidesoftware.code-spell-checker",
        "wayou.vscode-todo-highlight",

        // API Development
        "humao.rest-client",
        "rangav.vscode-thunder-client",

        // Database Tools
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",

        // Security
        "snyk-security.snyk-vulnerability-scanner",

        // Performance
        "wix.vscode-import-cost",

        // Documentation
        "bierner.markdown-preview-github-styles",

        // Development Theme & Visual Organization
        "deepforest.theme", // Vira Deepforest theme for organized development
        "vscode-icons-team.vscode-icons" // Better file icons for organization
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "deno.enable": true,
        "deno.enablePaths": ["supabase/functions"],
        "git.autofetch": true,
        "git.confirmSync": false,
        "git.enableSmartCommit": true,

        // Editor Performance Settings - Enhanced for Development
        "editor.minimap.enabled": false,
        "editor.renderWhitespace": "none",
        "editor.renderControlCharacters": false,
        "workbench.colorTheme": "Vira Deepforest", // Development-specific theme
        "workbench.iconTheme": "vscode-icons", // Better file icons for organization
        "workbench.list.smoothScrolling": false,
        "workbench.tree.renderIndentGuides": "none",
        "workbench.editor.closeOnFileDelete": true,

        // Development-specific UI enhancements
        "workbench.colorCustomizations": {
          "[Vira Deepforest]": {
            "titleBar.activeBackground": "#1a4d3a",
            "titleBar.activeForeground": "#ffffff",
            "statusBar.background": "#1a4d3a",
            "statusBar.foreground": "#ffffff",
            "activityBar.background": "#0d2818",
            "panel.background": "#0a1f14"
          }
        },
        "workbench.settings.editor": "json",
        "breadcrumbs.enabled": true,

        // File System Performance
        "files.watcherExclude": {
          "**/*.log": true,
          "**/*.tmp": true,
          "**/node_modules/**": true,
          "**/archive/**": true,
          "**/.git/**": true,
          "**/logs/**": true
        },

        // Search Performance
        "search.exclude": {
          "**/node_modules": true,
          "**/*.log": true,
          "**/archive/**": true,
          "**/.git": true
        },
        "search.searchOnType": false,

        // Copilot Optimization
        "github.copilot.chat.historyCount": 8,
        "github.copilot.chat.welcomeMessage": "none",
        "github.copilot.chat.completionPhrasesEnabled": false,
        "github.copilot.advanced.setAutoCompletionTriggerThreshold": 30,

        // Terminal Settings - Development Enhanced
        "terminal.integrated.gpuAcceleration": "on",
        "terminal.integrated.scrollback": 1000,
        "terminal.integrated.fontFamily": "Consolas, 'Courier New', monospace",
        "terminal.integrated.fontSize": 13,

        // Development Environment Indicators
        "window.title": "ðŸŽ¯ ${folderName} - Verified Business Intelligence ${separator} ${activeEditorShort}",
        "workbench.startupEditor": "welcomePageInEmptyWorkbench",

        // === MCP (Model Context Protocol) Configuration ===
        "mcp.enable": true,
        "mcp.configFile": "${workspaceFolder}/.vscode/mcp-config.json",

        // API Development Specific Settings
        "rest-client.enableTelemetry": false,
        "files.associations": {
          "*.http": "http",
          "*.rest": "http"
        },

        // AI-Enhanced Development Settings for Verified Data Integration
        "ai.contextAware": true,
        "ai.projectContext": {
          "type": "verified-business-intelligence-platform",
          "framework": "supabase-edge-functions",
          "database": "supabase-postgresql",
          "apis": [
            "google-places",
            "apollo-contacts",
            "chamber-commerce",
            "professional-licensing"
          ],
          "deployment": "supabase-edge-functions",
          "dataPolicy": "zero-fake-data-verified-contacts-only"
        }
      }
    }
  },
  "forwardPorts": [3000, 5432],
  "postCreateCommand": "bash -lc 'set -e; echo \"[setup] Initializing ProspectPro verified business intelligence environment...\"; sudo apt-get update && sudo apt-get install -y docker.io; if ! getent group docker >/dev/null; then sudo groupadd docker; fi; sudo usermod -aG docker node; if [ -f package-lock.json ]; then npm ci; else npm install; fi; npm i supabase --save-dev; npm run mcp:init; npm run codebase:index; echo \"[ready] Verified data environment prepared with zero fake data policy.\"; echo \"[next] ProspectPro verified business intelligence development ready.\"'",
  "postStartCommand": "bash -c 'echo \"[start] ProspectPro verified business intelligence environment active.\"; echo \"Data Policy: Zero Fake Data | Contacts: Verified Only | Architecture: Supabase Edge Functions\"; echo \"[hint] Use Copilot Chat for AI-assisted development with verified data context.\"'",
  "runArgs": ["--init", "-v", "/var/run/docker.sock:/var/run/docker.sock"],
  "remoteUser": "node"
}
