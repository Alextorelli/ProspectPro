{
  "name": "ProspectPro Development",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        // Core Development
        "denoland.vscode-deno",
        "supabase.supabase-vscode",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",

        // Productivity
        "eamodio.gitlens",
        "github.copilot",
        "github.copilot-chat",
        "streetsidesoftware.code-spell-checker",
        "wayou.vscode-todo-highlight",

        // API Development
        "humao.rest-client",
        "rangav.vscode-thunder-client",

        // Docker Support
        "ms-azuretools.vscode-docker",

        // Database Tools
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",

        // Security
        "snyk-security.snyk-vulnerability-scanner",

        // Performance
        "wix.vscode-import-cost",

        // Documentation
        "bierner.markdown-preview-github-styles",

        // Development Theme & Visual Organization
        "deepforest.theme", // Vira Deepforest theme for organized development
        "vscode-icons-team.vscode-icons", // Better file icons for organization

        // Recommended to Uninstall (using proper format with leading -)
        "-github.vscode-pull-request-github", // Too much impact on startup
        "-codezombiech.gitignore", // Limited utility, slows startup
        "-yzhang.markdown-all-in-one", // Redundant with built-in
        "-aaron-bond.better-comments" // Visual noise, performance impact
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "deno.enable": true,
        "deno.enablePaths": ["supabase/functions"],
        "git.autofetch": true,
        "git.confirmSync": false,
        "git.enableSmartCommit": true,

        // Editor Performance Settings - Enhanced for Development
        "editor.minimap.enabled": false,
        "editor.renderWhitespace": "none",
        "editor.renderControlCharacters": false,
        "workbench.colorTheme": "Vira Deepforest", // Development-specific theme
        "workbench.iconTheme": "vscode-icons", // Better file icons for organization
        "workbench.list.smoothScrolling": false,
        "workbench.tree.renderIndentGuides": "none",
        "workbench.editor.closeOnFileDelete": true,

        // Development-specific UI enhancements
        "workbench.colorCustomizations": {
          "[Vira Deepforest]": {
            "titleBar.activeBackground": "#1a4d3a",
            "titleBar.activeForeground": "#ffffff",
            "statusBar.background": "#1a4d3a",
            "statusBar.foreground": "#ffffff",
            "activityBar.background": "#0d2818",
            "panel.background": "#0a1f14"
          }
        },
        "workbench.settings.editor": "json",
        "breadcrumbs.enabled": true,

        // File System Performance
        "files.watcherExclude": {
          "**/*.log": true,
          "**/*.tmp": true,
          "**/node_modules/**": true,
          "**/archive/**": true,
          "**/.git/**": true,
          "**/logs/**": true
        },

        // Search Performance
        "search.exclude": {
          "**/node_modules": true,
          "**/*.log": true,
          "**/archive/**": true,
          "**/.git": true
        },
        "search.searchOnType": false,

        // Copilot Optimization
        "github.copilot.chat.historyCount": 8,
        "github.copilot.chat.welcomeMessage": "none",
        "github.copilot.chat.completionPhrasesEnabled": false,
        "github.copilot.advanced.setAutoCompletionTriggerThreshold": 30,

        // Terminal Settings - Development Enhanced
        "terminal.integrated.gpuAcceleration": "on",
        "terminal.integrated.scrollback": 1000,
        "terminal.integrated.fontFamily": "Consolas, 'Courier New', monospace",
        "terminal.integrated.fontSize": 13,

        // Development Environment Indicators
        "window.title": "üî® ${folderName} - ProspectPro Development ${separator} ${activeEditorShort}",
        "workbench.startupEditor": "welcomePageInEmptyWorkbench",

        // === MCP (Model Context Protocol) Configuration ===
        "mcp.enable": true,
        "mcp.configFile": "${workspaceFolder}/.vscode/mcp-config.json",

        // API Development Specific Settings
        "rest-client.enableTelemetry": false,
        "files.associations": {
          "*.http": "http",
          "*.rest": "http"
        },

        // AI-Enhanced Development Settings for API Integration
        "ai.contextAware": true,
        "ai.projectContext": {
          "type": "lead-generation-platform",
          "framework": "node-express",
          "database": "supabase",
          "apis": ["google-places", "foursquare", "hunter-io", "neverbounce"],
          "deployment": "docker-compose",
          "monitoring": "custom-diagnostics"
        }
      }
    }
  },
  "forwardPorts": [3000, 5432],
  "postCreateCommand": "bash -lc 'set -e; echo \"üèóÔ∏è  Setting up ProspectPro Development Environment...\"; sudo apt-get update && sudo apt-get install -y docker.io; if [ -f package-lock.json ]; then npm ci; else npm install; fi; npm i supabase --save-dev; npm run mcp:install; npm run mcp:test; echo \"üé® Development environment ready with Vira Deepforest theme and MCP enabled!\"; echo \"üöÄ ProspectPro development container is ready for API integration work\"'",
  "postStartCommand": "bash -c 'echo \"üå≤ ProspectPro Development Container Started\"; echo \"Theme: Vira Deepforest | MCP: Enabled | Ready for API Integration\"; echo \"üí° Use Copilot Chat for AI-assisted development with full system context\"'",
  "runArgs": ["--init", "-v", "/var/run/docker.sock:/var/run/docker.sock"],
  "remoteUser": "node"
}
