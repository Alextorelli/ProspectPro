{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Test Business Discovery Optimized",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/app/backend/functions/business-discovery-optimized/index.ts",
      "env": {
        "SUPABASE_URL": "https://sriycekxdqnesdsgwiuc.supabase.co",
        "SUPABASE_ANON_KEY": "${env:SUPABASE_ANON_KEY}"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Test Campaign Export",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/app/backend/functions/campaign-export/index.ts",
      "env": {
        "SUPABASE_URL": "https://sriycekxdqnesdsgwiuc.supabase.co"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Debug MCP Production Server v4.1",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/mcp-servers/production-server.js",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Debug MCP Development Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/mcp-servers/development-server.js",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Debug MCP Troubleshooting Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/mcp-servers/troubleshooting-server.js",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Local Supabase Stack",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "Supabase: Start Local Stack",
      "program": "${input:functionPath}",
      "env": {
        "SUPABASE_URL": "http://127.0.0.1:54321",
        "SUPABASE_ANON_KEY": "${env:SUPABASE_ANON_KEY}",
        "SUPABASE_SERVICE_ROLE_KEY": "${env:SUPABASE_SERVICE_ROLE_KEY}"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Debug Supabase Diagnostics",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/diagnostics/edge-function-diagnostics.sh",
      "args": ["${input:sessionJWT}"],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"]
    },
    {
      "type": "node-terminal",
      "name": "Run Script: start:production (mcp-servers)",
      "request": "launch",
      "command": "npm run start:production",
      "cwd": "${workspaceFolder}/mcp-servers"
    },
    {
      "name": "Debug Vercel Preview (React DevTools)",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "https://prospect-fyhedobh1-appsmithery.vercel.app",
      "webRoot": "${workspaceFolder}/public",
      "breakOnLoad": true,
      "runtimeArgs": ["--auto-open-devtools-for-tabs"],
      "presentation": {
        "panel": "dedicated"
      }
    }
  ],
  "compounds": [
    {
      "name": "Debug Edge Functions",
      "configurations": [
        "Test Business Discovery Optimized",
        "Test Campaign Export"
      ]
    }
  ],
  "inputs": [
    {
      "id": "functionPath",
      "type": "promptString",
      "description": "Path to Edge Function index.ts (e.g., app/backend/functions/business-discovery-background/index.ts)"
    }
  ]
}
