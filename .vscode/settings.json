{
  // === DENO CONFIGURATION (RESTRICTED TO SUPABASE ONLY) ===
  "deno.enable": false,
  "deno.enablePaths": ["supabase/functions"],
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "deno.lint": true,
  "deno.unstable": ["bare-node-builtins", "byonm", "sloppy-imports"],

  // === GIT OPTIMIZATIONS ===
  "git.ignoreLimitWarning": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.fetchOnPull": true,
  "git.mergeEditor": true,

  // === GITHUB COPILOT OPTIMIZATIONS ===
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  },
  "github.copilot.inlineSuggest.enable": true,
  "github.copilot.chat.welcomeMessage": "none",
  "github.copilot.chat.localeOverride": "en",
  "github.copilot.chat.historyCount": 8,
  "github.copilot.chat.completionPhrasesEnabled": false,
  "github.copilot.chat.dynamicContextTrailingLength": 500,
  "github.copilot.advanced.setAutoCompletionTriggerThreshold": 30,
  "github.copilot.advanced.connectionTimeout": 45000,

  // === EDITOR PERFORMANCE OPTIMIZATIONS ===
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.renderControlCharacters": false,
  "editor.renderLineHighlight": "gutter",
  "editor.bracketPairColorization.enabled": false,
  "editor.guides.bracketPairs": false,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // === WORKBENCH OPTIMIZATIONS ===
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.list.smoothScrolling": false,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.editor.closeOnFileDelete": true,

  // === FILE SYSTEM PERFORMANCE ===
  "files.exclude": {
    "**/*.log": true,
    "**/*.tmp": true,
    "**/*.temp": true,
    "**/diagnostics.json": true,
    "**/startup.log": true,
    "**/production*.log": true,
    "**/database-validation.log": true,
    "**/server-test.log": true,
    "**/test-*.js": true,
    "**/*-analysis.js": true,
    "**/*-troubleshooting.js": true,
    "**/*-fix.js": true
  },

  "files.watcherExclude": {
    "**/*.log": true,
    "**/*.tmp": true,
    "**/*.temp": true,
    "**/diagnostics.json": true,
    "**/startup.log": true,
    "**/node_modules/**": true,
    "**/archive/**": true,
    "**/.git/**": true,
    "**/logs/**": true,
    "**/dist/**": true
  },

  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.associations": {
    "*.md": "markdown",
    ".copilot-instructions": "markdown"
  },

  // === SEARCH OPTIMIZATIONS ===
  "search.exclude": {
    "**/node_modules": true,
    "**/*.log": true,
    "**/*.tmp": true,
    "**/*.temp": true,
    "**/diagnostics.json": true,
    "**/startup.log": true,
    "**/production*.log": true,
    "**/archive/**": true,
    "**/.git": true,
    "**/logs/**": true,
    "**/dist/**": true,
    "**/coverage/**": true
  },
  "search.searchOnType": false,
  "search.searchOnTypeDebouncePeriod": 800,

  // === JAVASCRIPT/NODE.JS SETTINGS ===
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,
  "js/ts.implicitProjectConfig.checkJs": false,

  // === LINTING AND FORMATTING ===
  "eslint.validate": ["javascript", "javascriptreact", "json"],

  // === NPM OPTIMIZATIONS ===
  "npm.packageManager": "npm",
  "npm.exclude": ["**/node_modules/**", "**/archive/**"],
  "npm.autoDetect": "off",

  // === MARKDOWN SETTINGS ===
  "markdown.preview.breaks": true,
  "markdown.preview.linkify": true,

  // === TERMINAL OPTIMIZATIONS ===
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": "cmd.exe",
      "icon": "terminal-cmd"
    },
    "Windows PowerShell": {
      "path": "powershell.exe",
      "icon": "terminal-powershell"
    }
  },
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.scrollback": 1000,

  // === MCP CONFIGURATION ===
  "mcp.enable": true,
  "mcp.servers": {
    "prospectpro-production": {
      "enabled": true,
      "autoStart": true,
      "description": "ProspectPro Enhanced Production Server - Monitoring, Analytics, Diagnostics, API Testing, Filesystem Analysis"
    },
    "prospectpro-development": {
      "enabled": true,
      "autoStart": false,
      "description": "ProspectPro Development Server - New API Integration, Performance Benchmarking, Development Utilities"
    }
  },

  // === AI PROJECT CONTEXT ===
  "ai.contextAware": true,
  "ai.projectContext": {
    "type": "lead-generation-platform",
    "framework": "node-express",
    "database": "supabase",
    "apis": ["google-places", "foursquare", "hunter-io", "neverbounce"],
    "deployment": "docker-compose",
    "monitoring": "custom-diagnostics"
  }
}
