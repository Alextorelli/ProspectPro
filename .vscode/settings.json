{
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "deno.enablePaths": ["supabase/functions"],
  "deno.lint": true,
  "deno.unstable": [
    "bare-node-builtins",
    "byonm",
    "sloppy-imports",
    "unsafe-proto",
    "webgpu",
    "broadcast-channel",
    "worker-options",
    "cron",
    "kv",
    "ffi",
    "fs",
    "http",
    "net"
  ],
  "git.ignoreLimitWarning": true,

  // === ENHANCED PRODUCTION WORKSPACE SETTINGS ===

  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  },
  "github.copilot.inlineSuggest.enable": true,

  // Copilot Chat optimizations
  "github.copilot.chat.welcomeMessage": "none",
  "github.copilot.chat.localeOverride": "en",
  "github.copilot.chat.historyCount": 8, // Limit chat history
  "github.copilot.chat.completionPhrasesEnabled": false, // Disable unnecessary phrases
  "github.copilot.chat.dynamicContextTrailingLength": 500, // Control context size

  // Copilot performance settings
  "github.copilot.advanced.setAutoCompletionTriggerThreshold": 30, // Less aggressive
  "github.copilot.advanced.connectionTimeout": 45000, // Better performance on slower connections

  // Editor performance optimizations
  "editor.minimap.enabled": false, // Reduces CPU usage
  "editor.renderWhitespace": "none", // Reduces rendering overhead
  "editor.renderControlCharacters": false, // Reduces rendering overhead
  "editor.renderLineHighlight": "gutter", // Less UI overhead than "all"
  "editor.bracketPairColorization.enabled": false, // Reduces rendering overhead
  "editor.guides.bracketPairs": false, // Reduces rendering overhead
  "workbench.colorTheme": "Default Dark Modern", // Use built-in theme for performance
  "workbench.list.smoothScrolling": false, // Better performance on lower-end machines
  "workbench.tree.renderIndentGuides": "none", // Reduces UI overhead
  "workbench.editor.closeOnFileDelete": true, // Prevents confusion with deleted files

  // File system performance
  "files.exclude": {
    "**/*.log": true,
    "**/*.tmp": true,
    "**/*.temp": true,
    "**/diagnostics.json": true,
    "**/startup.log": true,
    "**/production*.log": true,
    "**/database-validation.log": true,
    "**/server-test.log": true
  },

  "files.watcherExclude": {
    "**/*.log": true,
    "**/*.tmp": true,
    "**/*.temp": true,
    "**/diagnostics.json": true,
    "**/startup.log": true,
    "**/node_modules/**": true,
    "**/archive/**": true,
    "**/.git/**": true,
    "**/logs/**": true,
    "**/dist/**": true
  },

  "search.exclude": {
    "**/node_modules": true,
    "**/*.log": true,
    "**/*.tmp": true,
    "**/*.temp": true,
    "**/diagnostics.json": true,
    "**/startup.log": true,
    "**/production*.log": true,
    "**/archive/**": true,
    "**/.git": true,
    "**/logs/**": true,
    "**/dist/**": true,
    "**/coverage/**": true
  },

  "search.searchOnType": false, // Reduces search operations while typing
  "search.searchOnTypeDebouncePeriod": 800, // Longer debounce for better performance

  "files.associations": {
    "*.md": "markdown",
    ".copilot-instructions": "markdown"
  },

  "markdown.preview.breaks": true,
  "markdown.preview.linkify": true,

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  "eslint.validate": ["javascript", "javascriptreact", "json"],

  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,

  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,

  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,

  // Node.js and npm performance optimizations
  "npm.packageManager": "npm",
  "npm.exclude": ["**/node_modules/**", "**/archive/**"],
  "npm.autoDetect": "off", // Prevents constant scanning of folders
  "js/ts.implicitProjectConfig.checkJs": false, // Reduces TypeScript checking overhead

  // Git optimizations
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.fetchOnPull": true,
  "git.mergeEditor": true, // Better merge conflict resolution

  // Terminal optimizations for Windows
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": "cmd.exe",
      "icon": "terminal-cmd"
    },
    "Windows PowerShell": {
      "path": "powershell.exe",
      "icon": "terminal-powershell"
    }
  },
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.scrollback": 1000, // Lower scrollback for memory optimization

  // === MCP (Model Context Protocol) Configuration ===
  "mcp.enable": true,
  "mcp.configFile": "${workspaceFolder}/.vscode/mcp-config.json",
  "mcp.servers": {
    "prospectpro-database": {
      "enabled": true,
      "autoStart": true,
      "description": "ProspectPro Database Access via Supabase"
    },
    "prospectpro-apis": {
      "enabled": true,
      "autoStart": false,
      "description": "ProspectPro API Clients (Google Places, Foursquare, Hunter.io)"
    },
    "prospectpro-filesystem": {
      "enabled": true,
      "autoStart": true,
      "description": "ProspectPro Codebase Analysis and File Management"
    },
    "prospectpro-monitoring": {
      "enabled": true,
      "autoStart": false,
      "description": "ProspectPro Monitoring and Diagnostics"
    },
    "prospectpro-production": {
      "enabled": true,
      "autoStart": true,
      "description": "ProspectPro Production Environment Management and CI/CD Monitoring"
    }
  },

  // AI-Enhanced Development Settings
  "ai.contextAware": true,
  "ai.projectContext": {
    "type": "lead-generation-platform",
    "framework": "node-express",
    "database": "supabase",
    "apis": ["google-places", "foursquare", "hunter-io", "neverbounce"],
    "deployment": "docker-compose",
    "monitoring": "custom-diagnostics"
  }
}
