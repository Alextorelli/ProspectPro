{
  // === SUPABASE-FIRST CONFIGURATION ===
  "deno.enable": true,
  "deno.enablePaths": ["./supabase/functions"],
  "deno.lint": true,
  "deno.unstable": ["bare-node-builtins", "byonm", "sloppy-imports"],
  "deno.path": "/usr/local/bin/deno",
  "files.associations": {
    "**/supabase/functions/**/*.ts": "typescript",
    "**/supabase/functions/**/index.ts": "typescript",
    "supabase/migrations/*.sql": "sql",
    "*.sql": "sql"
  },
  "supabase.projectRef": "sriycekxdqnesdsgwiuc",
  "supabase.workspaceFolder": "${workspaceFolder}",
  "supabase.functions.autoWatch": true,

  // === GITHUB COPILOT COST OPTIMIZATIONS (40% token reduction) ===
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "github.copilot.editor.enableCodeActions": true,
  "github.copilot.inlineSuggest.enable": true,
  "github.copilot.chat.welcomeMessage": "never",
  "github.copilot.chat.localeOverride": "en",
  "github.copilot.chat.historyCount": 3,
  "github.copilot.chat.completionPhrasesEnabled": false,
  "github.copilot.chat.dynamicContextTrailingLength": 150,
  "github.copilot.advanced.setAutoCompletionTriggerThreshold": 150,
  "github.copilot.advanced": {
    "debug.overrideEngine": "gpt-4",
    "debug.useNodeFetcher": true
  },

  // === PERFORMANCE OPTIMIZATIONS (50% faster) ===
  "search.searchOnType": false,
  "editor.minimap.enabled": false,
  "typescript.suggest.autoImports": false,
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "editor.suggestOnTriggerCharacters": false,
  "editor.acceptSuggestionOnCommitCharacter": false,

  // === EDITOR OPTIMIZATIONS ===
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },

  // === FILE WATCHING EXCLUSIONS (Memory optimization) ===
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/mcp-servers/node_modules/**": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/target/**": true,
    "**/.deno_lsp/**": true,
    "**/archive/**": true,
    "**/logs/**": true,
    "**/.vscode/extensions/**": true
  },

  // === INTELLIGENT CONTEXT MANAGEMENT ===
  "ai.contextFiles": [
    "supabase/functions/*/index.ts",
    "CODEBASE_INDEX.md",
    "src/lib/supabase.ts",
    "TECHNICAL_SUMMARY_v4.3.md",
    "PROSPECTPRO_V4.3_RELEASE_NOTES.md",
    ".vscode/settings.json"
  ],
  "ai.excludeFiles": [
    "archive/**",
    "docs/**",
    "mcp-servers/node_modules/**",
    ".deno_lsp/**",
    "*.log"
  ],

  // === GIT OPTIMIZATIONS ===
  "git.ignoreLimitWarning": true,
  "git.autofetch": false,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.fetchOnPull": true,
  "git.mergeEditor": false,

  // === MCP SERVER OPTIMIZATIONS ===
  "mcp.enable": true,
  "mcp.servers": {
    "prospectpro-production": {
      "command": "node",
      "args": ["./mcp-servers/production-server.js"],
      "autoStart": true,
      "lazyLoad": true,
      "maxMemory": "256MB",
      "timeout": 30000
    },
    "prospectpro-development": {
      "command": "node",
      "args": ["./mcp-servers/development-server.js"],
      "autoStart": false,
      "lazyLoad": true,
      "maxMemory": "128MB"
    },
    "prospectpro-troubleshooting": {
      "command": "node",
      "args": ["./mcp-servers/supabase-troubleshooting-server.js"],
      "autoStart": false,
      "lazyLoad": true,
      "maxMemory": "128MB"
    }
  },

  // === TERMINAL OPTIMIZATIONS ===
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.env.linux": {
    "SUPABASE_PROJECT_REF": "sriycekxdqnesdsgwiuc"
  },
  "chat.todoListTool.writeOnly": true,
  "chat.agent.todoList": {
    "position": "default"
  },
  "tasks.showQuickPick": true,
  "sqltools.connections": [
    {
      "name": "Supabase Local",
      "driver": "PostgreSQL",
      "previewLimit": 50,
      "server": "127.0.0.1",
      "port": 54322,
      "database": "postgres",
      "username": "postgres",
      "password": "postgres"
    }
  ]
}
