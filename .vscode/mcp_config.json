{
  "inputs": [
    {
      "id": "memory_file_path",
      "type": "promptString",
      "description": "Path to the Utility MCP memory store",
      "password": false,
      "default": "${workspaceFolder}/dev-tools/workspace/context/session_store/memory.jsonl"
    },
    {
      "id": "browser_url",
      "type": "promptString",
      "description": "Optional remote Chrome debugging endpoint",
      "password": false
    },
    {
      "id": "headless",
      "type": "promptString",
      "description": "Run Chrome headless (true/false). Default: false",
      "password": false,
      "default": "false"
    },
    {
      "id": "isolated",
      "type": "promptString",
      "description": "Use a temporary user-data-dir (true/false). Default: false",
      "password": false,
      "default": "false"
    },
    {
      "id": "chrome_channel",
      "type": "promptString",
      "description": "Chrome channel: stable | canary | beta | dev (default: stable).",
      "password": false,
      "default": "stable"
    },
    {
      "id": "context7_api_key",
      "type": "promptString",
      "description": "Optional Context7 API key",
      "password": true
    },
    {
      "id": "supabase_service_role",
      "type": "promptString",
      "description": "Supabase service role key for Supabase MCP",
      "password": true
    }
  ],
  "servers": {
    "utility": {
      "type": "stdio",
      "command": "node",
      "args": ["./dev-tools/agents/mcp-servers/utility/dist/index.js"],
      "env": {
        "MCP_MEMORY_FILE_PATH": "${input:memory_file_path}"
      }
    },
    "supabase": {
      "type": "http",
      "url": "https://mcp.supabase.com/mcp?project_ref=sriycekxdqnesdsgwiuc&features=docs,account,database,debugging,development,functions,storage,branching",
      "headers": {
        "apiKey": "${input:supabase_service_role}"
      }
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/"
    },
    "microsoft/playwright-mcp": {
      "type": "stdio",
      "command": "npx",
      "args": ["@playwright/mcp@latest"],
      "env": {
        "BROWSER_URL": "${input:browser_url}",
        "HEADLESS": "${input:headless}",
        "ISOLATED": "${input:isolated}",
        "CHROME_CHANNEL": "${input:chrome_channel}"
      }
    },
    "context7": {
      "type": "http",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "${input:context7_api_key}"
      }
    }
  }
}
