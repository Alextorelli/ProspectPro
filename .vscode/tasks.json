{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Supabase: Ensure Session",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "cd supabase && source ../scripts/ensure-supabase-cli-session.sh"
      ],
      "group": "build",
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Close Codespace",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Docs: Update All Documentation",
        "MCP: Stop All Servers",
        "Docs: Update Codebase Index (Legacy)",
        "Git: Remind to Push Before Exit",
        "Git: Commit and Push All"
      ],
      "problemMatcher": ["$deno-lint"]
    },
    {
      "label": "Git: Remind to Push Before Exit",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "git status && echo 'REMINDER: Commit and push your changes before closing Codespace!'"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Git: Commit and Push All",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "git add . && git commit -m 'Codespace close: doc update, MCP stop, codebase index' || echo 'No changes to commit.' && git push"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
