[
  // --- Core Task Shortcuts ---
  {
    "key": "ctrl+shift+s",
    "command": "workbench.action.tasks.runTask",
    "args": "Supabase: Serve Local Functions",
    "when": "!terminalFocus"
  },
  {
    "key": "ctrl+shift+b",
    "command": "workbench.action.tasks.runTask",
    "args": "Build: Frontend Production",
    "when": "!terminalFocus"
  },
  {
    "key": "ctrl+shift+i",
    "command": "workbench.action.tasks.runTask",
    "args": "Docs: Update Codebase Index",
    "when": "!terminalFocus"
  },
  {
    "key": "ctrl+shift+v",
    "command": "workbench.action.tasks.runTask",
    "args": "Workspace: Validate Configuration",
    "when": "!terminalFocus"
  },
  {
    "key": "ctrl+alt+t",
    "command": "workbench.action.tasks.runTask",
    "args": "Thunder: Run Full Test Suite",
    "when": "!terminalFocus"
  },

  // --- Extras ---
  // Mermaid chart preview
  {
    "key": "ctrl+alt+p",
    "command": "mermaidchart.previewdiagram",
    "when": "editorLangId == mermaid || editorLangId == mmd"
  },
  // Preferences: Color Theme
  { "key": "ctrl+alt+c", "command": "workbench.action.selectTheme" },
  // Developer: Reload Window
  { "key": "ctrl+shift+r", "command": "workbench.action.reloadWindow" },

  // --- MCP Server Controls ---
  {
    "key": "ctrl+alt+m d",
    "command": "workbench.action.tasks.runTask",
    "args": "MCP: Start All Servers",
    "when": "!terminalFocus"
  },
  {
    "key": "ctrl+alt+m p",
    "command": "workbench.action.tasks.runTask",
    "args": "npm: mcp:prod",
    "when": "!terminalFocus"
  },
  {
    "key": "ctrl+alt+m t",
    "command": "workbench.action.tasks.runTask",
    "args": "MCP: Start Troubleshooting",
    "when": "!terminalFocus"
  },
  {
    "key": "ctrl+alt+m s",
    "command": "workbench.action.tasks.runTask",
    "args": "MCP: Stop All Servers",
    "when": "!terminalFocus"
  }
]
